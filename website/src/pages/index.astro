---
import Header from "../components/Header.astro";
import LeftMenu from "../components/LeftMenu.astro";
import Layout from "../layouts/Layout.astro";
import articles from "../articles.json";
import ArticleCard from "../components/ArticleCard.astro";
import { trpc } from "../lib/trpc";
import { loadImage } from "../lib/image";
const publications = await trpc.publications.getPaginated.query({
  page: 0,
  perPage: 5,
});
---

<Layout title="Главная">
  <Header />
  <main>
    <section class="hero">
      <p class="hero__text">Грибник грибника видит на Fungi.ru</p>
    </section>
    <section class="recommended">
      <h2>Возможно, Вам будет интересно почитать!</h2>
      <div class="wrapper">
        {
          publications.map((a) => (
            <ArticleCard id={a.id} name={a.title} image={loadImage(a.image)} />
          ))
        }
      </div>
    </section>
  </main>
</Layout>
<style>
  main {
    display: flex;
    flex-direction: column;
  }
  .content {
    width: 100%;
    flex-shrink: 1;
  }

  .hero {
    background-image: url("./images/grib.png");
    width: 100%;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-size: cover;
    background-position: center;
  }
  .hero__text {
    font-style: normal;
    font-weight: 400;
    font-size: 55px;
    line-height: 65px;
    display: flex;
    align-items: center;
    text-align: center;

    /* Light - BG */

    color: #ffffff;
  }

  .recommended {
    padding: 30px 100px;
  }

  .wrapper {
    display: flex;
    gap: 40px;
  }
  h2 {
    margin: 0 auto;
    max-width: fit-content;
    font-style: normal;
    font-weight: 400;
    font-size: 30px;
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    text-align: center;
    color: #000000;
  }
</style>
