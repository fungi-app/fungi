---
import Header from "../components/Header.astro";
import LeftMenu from "../components/LeftMenu.astro";
import Layout from "../layouts/Layout.astro";
import articles from "../articles.json";
import ArticleCard from "../components/ArticleCard.astro";
function arrayRandElement(massive: typeof articles) {
  let rand = Math.floor(Math.random() * massive.length);
  return massive[rand];
}
const rand = arrayRandElement(articles);

function sortFunction(a, b) {
  var dateA = new Date(a.date).getTime();
  var dateB = new Date(b.date).getTime();
  return dateA > dateB ? -1 : 1;
}

function lastArticles(massive: typeof articles) {
  let sorted = massive.sort(sortFunction);
  return sorted.slice(0, 5);
}
---

<Layout title="Главная">
  <Header />
  <main>
    <section class="hero">
      <p class="hero__text">Грибник грибника видит на Fungi.ru</p>
    </section>
    <section class="recomented">
      <h2>Возможно, Вам будет интересно почитать!</h2>
      <div class="wrapper">
        {
          lastArticles(articles).map((articlee) => (
            <ArticleCard
              id={articlee.id}
              name={articlee.name}
              date={new Date(articlee.date)}
              author={articlee.author}
            />
          ))
        }
      </div>
    </section>
  </main>
</Layout>
<style>
  @import "@fontsource-variable/raleway";

  main {
    display: flex;
    flex-direction: column;
  }
  .content {
    width: 100%;
    flex-shrink: 1;
  }

  .hero {
    background-image: url("./images/grib.png");
    width: 100%;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .hero__text {
    font-family: "Raleway Variable";
    font-style: normal;
    font-weight: 400;
    font-size: 55px;
    line-height: 65px;
    display: flex;
    align-items: center;
    text-align: center;

    /* Light - BG */

    color: #ffffff;
  }

  .recomented {
    padding: 30px 100px;
  }

  .wrapper {
    display: flex;
    gap: 40px;
  }
  h2 {
    margin: 0 auto;
    max-width: fit-content;
    font-family: "Raleway Variable";
    font-style: normal;
    font-weight: 400;
    font-size: 30px;
    line-height: 65px;
    display: flex;
    align-items: center;
    text-align: center;
    color: #000000;
  }
</style>
