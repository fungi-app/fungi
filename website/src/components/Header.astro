---
import { Icon } from "astro-icon";
import Logo from "../components/Logo.astro";
import Search from "./Search.astro";
const menu = [
  {
    name: "О нас",
    link: "/about",
  },
  {
    name: "Публикации",
    link: "/publications",
  },
  {
    name: "Энциклопедия",
    link: "/encyclopedia",
  },
];
---

<header class="header">
  <div class="header__search-wrapper">
    <Logo />
  </div>
  <div class="header__links-wrapper">
    {
      menu.map((e) => (
        <a
          class="header__link"
          href={e.link}
          data-selected={Astro.url.pathname.startsWith(e.link)}
        >
          {e.name}
        </a>
      ))
    }
  </div>
  <button class="sandwich">
    <Icon name="sandwich" size={24} />
  </button>
  <div class="dropdown" aria-hidden="true">
    {
      menu.map((e) => (
        <a href={e.link} data-selected={Astro.url.pathname.startsWith(e.link)}>
          {e.name}
        </a>
      ))
    }
  </div>
  <script>
    document
      .querySelector(".sandwich")
      .addEventListener("click", (e) =>
        document
          .querySelector(".dropdown")
          .setAttribute(
            "aria-hidden",
            (
              document
                .querySelector(".dropdown")
                .getAttribute("aria-hidden") === "false"
            ).toString()
          )
      );
  </script>
</header>

<style>
  .header {
    background-color: #ffe8c5;
    display: flex;
    align-items: center;
    gap: 30px;
    justify-content: space-between;
    padding: 0 20px;
    position: relative;
  }

  .header__links-wrapper {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 24px;
    flex-shrink: 0;
    flex-grow: 1;
    max-width: 500px;
  }
  .sandwich {
    display: none;
    background-color: transparent;
    border: none;
    padding: 0;
    margin: 0;
    height: fit-content;
    position: relative;
    font-family: inherit;
  }
  .dropdown {
    display: none;
    position: absolute;
    right: 0;
    top: 100%;
    background-color: #ffe8c5;
    border-radius: 8px;
    padding: 10px;
    margin: 10px;
    transform: scale(1);
    opacity: 1;
    transition: transform 0.15s ease, opacity 0.15s ease;
    z-index: 99999;
  }
  .dropdown[aria-hidden="true"] {
    transform: scale(0);
    opacity: 0;
  }
  .dropdown a {
    color: #000000;
    font-weight: 600;
    display: block;
    text-align: start;
    padding: 3px 0;
    font-size: 16px;
    text-decoration: none;
  }
  @media (max-width: 600px) {
    .header__links-wrapper {
      display: none;
    }
    .sandwich {
      display: block;
    }
    .dropdown {
      display: block;
    }
  }

  .header__link {
    text-decoration: none;
    font-style: normal;
    font-weight: 600;
    font-size: 18px;
    line-height: 28px;
    text-align: center;
    color: #000000;
  }
  a[data-selected] {
    text-decoration: underline;
  }
</style>
