export type Props = { class?: string };
---

<div class={"left-menu " + Astro.props.class ?? ""}>
  <ul>
    <li class="left-menu__name-category">Разделы</li>
    <li><a href="/">Главная</a></li>
    <li><a href="/publications">Публикции</a></li>
