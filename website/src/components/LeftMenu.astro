<style>
  .left-menu {
    width: 200px;
    padding: 10px 15px 15px 15px;
    background-color: #f8f9fa;
    box-sizing: border-box;
    flex-shrink: 0;
    height: fit-content;
  }
  a {
    color: #3366cc;
    font-size: large;
  }
  a:visited {
    color: #3366cc;
  }
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  li {
  }
  .left-menu__name-category {
    border-bottom: 1px solid #eaecf0;
    color: #54598a;
    font-size: large;
  }
