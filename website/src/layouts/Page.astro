---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
export type Props = {
  title: string;
};
---

<Layout title={Astro.props.title}>
  <Header />
  <main>
    <div class="content">
      <slot />
    </div>
  </main>
</Layout>

<style>
  .content {
    max-width: 1100px;
    margin: 20px auto;
    padding: 0 20px;
  }
</style>
